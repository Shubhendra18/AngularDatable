@model DataAnnotationss.Models.UserTable

@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="myapp">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp"
          crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.js"
            integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB"
          crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js"></script>
    <script src="~/Scripts/myjavascript.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.js"></script>
    <link href="~/Content/Pagination.css" rel="stylesheet" />
    <style>
        table th:hover {
            cursor: pointer;
        }
        .arrow-down:after, .arrow-up:after {
            content: ' ';
            position: relative;
            left: 3px;
            border: 8px solid transparent;
        }
        .arrow-down:after {
            top: 15px;
            border-top-color: white;
        }
        .arrow-up:after {
            bottom: 15px;
            border-bottom-color: white;
        }
        .arrow-down, .arrow-up {
            padding-right: 13px;
        }
    </style>
</head>
<body class="container">
    <div class="mt-2" ng-controller="adduser">
        <h4 class="display-4 text-center mb-4">EF CRUD Using Angular Js</h4>
        <div class="row">
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h4>Add New User Details</h4>
                    </div>
                    <div class="card-body">
                        <form name="uForm" id="uForm">
                            <div class="form-group">
                                <label>Enter Your Full Name</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fas fa-user" ng-class="{ 'text-danger' : uForm.Name.$invalid
                                           && uForm.Name.$touched ,'text-success':uForm.Name.$valid
                                           && uForm.Name.$touched}"></i>
                                        </span>
                                    </div>
                                    <input class="form-control" ng-class="{ 'is-invalid' : uForm.Name.$invalid
                                       && uForm.Name.$touched,'is-valid':uForm.Name.$valid
                                       && uForm.Name.$touched }" placeholder="Full Name" required
                                           name="Name" ng-model="udata.Name">
                                </div>
                                <span class="text-danger" ng-show="uForm.Name.$touched &&
                                  uForm.Name.$error.required">
                                    Name Is Requierd Here
                                </span>
                            </div>

                            <div class="form-group">
                                <label>Email</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fas fa-envelope" ng-class="{ 'text-danger' : uForm.Email.$invalid
                                           && uForm.Email.$touched ,'text-success':uForm.Email.$valid
                                           && uForm.Email.$touched}"></i>
                                        </span>
                                    </div>
                                    <input class="form-control" ng-class="{ 'is-invalid' : uForm.Email.$invalid
                                       && uForm.Email.$touched,'is-valid':uForm.Email.$valid
                                       && uForm.Email.$touched }" pattern="\w+([-+.']\w+)*&#64;\w+([-.]\w+)*\.\w+([-.]\w+)*" placeholder="Email here" required
                                           name="Email" ng-model="udata.Email">
                                </div>
                                <span class="text-danger" ng-show="uForm.Email.$touched &&
                                  uForm.Email.$error.required">
                                    Email Is Requierd
                                </span>
                                <span class="text-danger" ng-show="uForm.Email.$touched &&
                                  uForm.Email.$error.pattern">
                                    Email Is Not Valid

                                </span>
                            </div>
                            <div class="form-row">
                                <div class="col">
                                    <div class="form-group">
                                        <label>Address</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="fas fa-map-marker" ng-class="{ 'text-danger' : uForm.Address.$invalid
                                           && uForm.Address.$touched ,'text-success':uForm.Address.$valid
                                           && uForm.Address.$touched}"></i>
                                                </span>
                                            </div>
                                            <input class="form-control" ng-class="{ 'is-invalid' : uForm.Address.$invalid
                                       && uForm.Address.$touched,'is-valid':uForm.Address.$valid
                                       && uForm.Address.$touched }" placeholder="Address" required
                                                   name="Address" ng-model="udata.Address">
                                        </div>
                                        <span class="text-danger" ng-show="uForm.Address.$touched &&
                                  uForm.Address.$error.required">
                                            Address Is Requiered
                                        </span>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        <label>Password</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i  class="fas fa-user" ng-class="{ 'text-danger' : uForm.Password.$invalid
                                           && uForm.Password.$touched ,'text-success':uForm.Password.$valid
                                           && uForm.Password.$touched}"></i>
                                                </span>
                                            </div>
                                            <input type="password" class="form-control" ng-class="{ 'is-invalid' : uForm.Password.$invalid
                                       && uForm.Password.$touched,'is-valid':uForm.Password.$valid
                                       && uForm.Password.$touched }" placeholder="***" required
                                                   name="Password" ng-model="udata.Password">
                                        </div>
                                        <span class="text-danger" ng-show="uForm.Password.$touched &&
                                  uForm.Password.$error.required">
                                            Requierd
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <input type="reset" value="Add User" ng-disabled="uForm.$invalid" class="btn btn-primary btn-block" ng-click="InsertData(udata)" />
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h4>All User Details</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-3 col-12">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend ">
                                            <span class="input-group-text bg-warning text-white">
                                                <i class="fas fa-table"></i>
                                            </span>
                                        </div>
                                        <select class="form-control" ng-init="so='5'" ng-model="so">
                                            <option value="5" selected>5</option>
                                            <option value="10">10</option>
                                            <option value="25">25</option>
                                            <option value="50">50</option>
                                        </select>
                                    </div>
                                </div>

                            </div>
                            <div class="col"></div>
                            <div class="col-lg-4 col-12">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend ">
                                            <span class="input-group-text bg-warning text-white">
                                                <i class="fas fa-search"></i>
                                            </span>
                                        </div>
                                        <input class="form-control" placeholder="Search" ng-model="se">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive">

                            <table id="dataTable" class="table  table-hover table-striped">
                                <thead class="bg-warning text-white">
                                    <tr>
                                        <th>Id</th>
                                        <th ng-click='sortColumn("Name")' ng-class='sortClass("Name")'>Name</th>
                                        <th ng-click='sortColumn("Email")' ng-class='sortClass("Email")'>Email</th>
                                        <th ng-click='sortColumn("Address")' ng-class='sortClass("Address")'>Address</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="k in users|filter:se|limitTo:so:(currentPage-1)*so|orderBy:column:reverse">
                                        <td>{{ $index + 1 }}</td>
                                        <td>{{k.Name}}</td>
                                        <td>{{k.Email}}</td>
                                        <td>{{k.Address}}</td>
                                        <td>
                                            <button data-target="#modalid" data-toggle="modal" ng-click="Update(k.Id)" class="btn btn-sm btn-primary"><i class="fa fa-edit"></i></button>
                                            <button onclick="return confirm('Are You Sure?')" ng-click="Delete(k.Id)" class="btn-danger btn-sm btn"><i class="fa fa-trash"></i></button>

                                        </td>
                                    </tr>
                                    <tr ng-if="!users||users.length==0||(users |filter:se).length == 0">
                                        <td colspan="5" class="text-center">
                                            No Data To Display
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <nav aria-label="Page navigation example">
                                <ul class="pagination" uib-pagination total-items="users.length" items-per-page="so" ng-model="currentPage" max-size="5" boundary-links="true" num-pages="numPages"></ul>
                            </nav>

                        </div>
                    </div>
                </div>
                <div class="modal fade" id="modalid">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4>Update User Record</h4>
                            </div>
                            <form name="updata">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label>Name</label>
                                        <input value="{{updata.Id}}" ng-model="updata.Id" style="display:none" />
                                        <input class="form-control" value="{{updata.Name}}" ng-model="updata.Name" placeholder="Full Name" />
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input class="form-control" value="{{updata.Email}}" ng-model="updata.Email" placeholder="Email" />
                                    </div>
                                    <div class="form-row">
                                        <div class="col">
                                            <div class="form-group">
                                                <label>Address</label>
                                                <input class="form-control" value="{{updata.Address}}" ng-model="updata.Address" placeholder="Address" />
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-group">
                                                <label>Password</label>
                                                <input type="password" class="form-control" value="{{updata.Password}}" ng-model="updata.Password" placeholder="****" />
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <input type="reset" value="Cancle" class="btn btn-primary" data-dismiss="modal" />
                                    <input type="reset" value="Update" class="btn btn-success" ng-click="finalUpdate(updata)" />

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
